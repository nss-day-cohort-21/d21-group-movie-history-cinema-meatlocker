{{#each this}}

<div class="col-lg-3" id="movie--{{@index}}">
      <img class="card-img-top" src="https://image.tmdb.org/t/p/w300/{{poster}}" alt="Image Coming Soon!">
      <div class="card-block">
            <div class="rateYo"></div> 
            <h4 class="card-title">{{title}}</h4>
            <p class="card-text">Released: {{year}}</p>
            <p class="card-text">Starring: {{actors}}</p>
          
            <nav aria-label="...">
            	<button type="button" class="open-modal btn btn-info btn-lg" movie-id="{{id}}" data-toggle="modal" data-target="#myModal">Open Modal</button>
                <button class="addToUserMovies" id="{{id}}" type="button"><a>+ My Movies</a><span class="sr-only">(current)</span></button>
	      </nav>
      </div>
   
</div>

{{/each}}